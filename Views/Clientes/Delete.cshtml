@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold text-danger">Excluir Cliente</h1>
        <p class="text-muted">Tem certeza de que deseja excluir este cliente? Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card shadow-sm p-4 border-danger">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nascimento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nascimento)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="ClienteId" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary rounded-3">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger rounded-3 fw-bold">
                <i class="bi bi-trash"></i> Excluir
            </button>
        </div>
    </form>
</div>
