@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Editar Cliente</h1>
        <p class="text-muted">Altere as informações do cliente abaixo.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="ClienteId" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label fw-bold"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nascimento" class="form-label fw-bold"></label>
                        <input asp-for="Nascimento" class="form-control" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary rounded-3">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-primary rounded-3 fw-bold">
                            <i class="bi bi-check-circle"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}