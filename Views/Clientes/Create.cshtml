@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Criar Novo Cliente</h1>
        <p class="text-muted">Preencha as informações abaixo para adicionar um novo cliente.</p>
    </div>

    <div class="card shadow-sm p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nascimento" class="form-label fw-bold"></label>
                <input asp-for="Nascimento" class="form-control" type="date" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary rounded-3">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-success rounded-3 fw-bold">
                    <i class="bi bi-check-circle"></i> Criar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
