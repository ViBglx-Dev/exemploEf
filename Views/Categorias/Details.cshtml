@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Detalhes da Categoria</h1>
        <p class="text-muted">Veja as informações da categoria abaixo.</p>
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-secondary rounded-3">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-warning rounded-3">
            <i class="bi bi-pencil"></i> Editar
        </a>
    </div>
</div>
